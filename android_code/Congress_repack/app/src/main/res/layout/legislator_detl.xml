<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/legidetl_tableLayout"
            android:stretchColumns="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:gravity="right">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp">

                    <ImageButton
                        android:id="@+id/legidetl_star"
                        android:background="@drawable/ic_menu_favr"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:paddingLeft="50dp"
                        android:layout_gravity="right|center_horizontal"
                        android:layout_marginLeft="50dp"
                        android:onClick="starClick"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/legidetl_fb"
                        android:background="@mipmap/ic_fb"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="right|center_vertical"
                        android:onClick="fbClick"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/legidetl_tw"
                        android:background="@drawable/ic_tw"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="right|center_vertical"
                        android:onClick="twClick"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/legidetl_ws"
                        android:background="@drawable/ic_ws"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingRight="50dp"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical|start"
                        android:layout_gravity="right|center_vertical"
                        android:onClick="wsClick"
                        android:layout_weight="1" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/legidetl_profile"
                        android:layout_width="100dp"
                        android:layout_height="150dp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/legidetl_partyImg"
                        android:layout_height="50dp"
                        android:layout_width="50dp"/>

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/legidetl_party"
                        android:textColor="@color/colorSecondary"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Name:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_name"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Email:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_email"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"  />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Chamber:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_chamber"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Contact:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_contact"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Start Term:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_start_term"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="End Term:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_end_term"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"/>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Term"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical">

                    <ProgressBar
                        android:id="@+id/legidetl_progress"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"/>
                    <TextView
                        android:id="@+id/legidetl_progressText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_alignBaseline="@+id/legidetl_progress" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Office"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_office"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="State"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_state"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="TextView" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Fax"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_fax"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Birthday"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/legidetl_birthday"
                    android:layout_weight="7"
                    android:textColor="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>